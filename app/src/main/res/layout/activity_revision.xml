<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.activity_revision"
    android:layout_alignParentLeft="true"
    tools:ignore="RtlHardcoded">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="GRUPO SAIMT"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        tools:textColor="#708090" />

    <View
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:textAlignment="center"
        android:layout_marginStart="180dp"
        android:layout_width="150dp"
        android:layout_below="@+id/textView8" />

    <View
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view3"
        android:layout_below="@+id/textView10"
        android:textAlignment="center"
        android:layout_marginStart="180dp"
        android:layout_width="150dp" />


    <Button
        android:id="@+id/paymentCancelButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#E0E0E0"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Comentarios"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#444444"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/price" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="22dp"
        android:paddingLeft="16dp"
        android:text=" HORA DE INICIO:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="15dp"
        tools:layout_height="70dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="50sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/view1"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view1"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Gracias por su preferencia"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/textView11"
        android:text="S/ 2.50/hora"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="170dp"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/view2"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2"
        android:paddingLeft="16dp"
        android:text="HORA DE SALIDA:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <TextView
        android:id="@+id/textView10"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textAlignment="center"

        android:paddingLeft="20dp"
        android:layout_width="170dp"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view3"
        android:layout_marginTop="45dp"
        android:paddingLeft="16dp"
        android:text="PRECIO POR HORA"
        android:textAlignment="center"
        android:textColor="#696969"
        android:textSize="21sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <Button
        android:id="@+id/nopeButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#222222"
        android:text="Sin comentarios"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>
