<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.Pago">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=" Por favor confirme su orden"
        android:textAlignment="center"
        android:textColor="#404040"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:paddingLeft="20dp"
        android:text="DESDE:"
        android:textAlignment="textStart"
        android:textColor="#202020"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_toStartOf="@+id/startTimeText"
        android:paddingLeft="20dp"
        android:text="HASTA:"
        android:textAlignment="textStart"
        android:textColor="#202020"
        android:textSize="36sp" />

    <TextView
        android:layout_height="60dp"
        android:layout_below="@+id/textView13"
        android:id="@+id/startTimeText"
        android:layout_width="180dp"
        android:textSize="36sp"
        android:textColor="#202020"
        android:paddingLeft="10dp"
        android:contentDescription="$10"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView15"
        android:textAlignment="textEnd"
        android:text="05:23 AM" />

    <TextView
        android:layout_height="60dp"
        android:id="@+id/endTimeText"
        android:layout_width="180dp"
        android:textSize="36sp"
        android:textColor="#202020"
        android:paddingLeft="10dp"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView15"
        android:textAlignment="textEnd"
        android:text="06:00 PM" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/MessageTotaltoPay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/totalToPay"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="60sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view1"
        android:layout_below="@+id/MessageTotaltoPay"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/MessageTotaltoPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:text=" TOTAL A PAGAR:"
        android:textAlignment="center"
        android:textColor="#202020"
        android:textSize="24sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="CONFIRMAR"
        android:background="#10ec61"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/paymentCancelButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="CANCELAR"
        android:background="#f40f81"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MessageTotaltoPay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="La tasa actual es S/. /hora"
        android:textSize="18sp" />

</RelativeLayout>
